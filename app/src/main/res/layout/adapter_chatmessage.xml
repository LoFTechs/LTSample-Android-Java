<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_list_entry_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/chat_message_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="sender" />

    <TextView
        android:id="@+id/chat_message_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_message_sender"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="14sp"
        tools:text="type" />

    <TextView
        android:id="@+id/chat_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_message_type"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="" />

    <TextView
        android:id="@+id/chat_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_message_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="123456789" />

    <Button
        android:id="@+id/chat_message_recall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_message_time"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:text="Recall" />

    <Button
        android:id="@+id/chat_message_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_message_recall"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/chat_message_recall"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:text="Delete" />

</RelativeLayout>