<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_list_entry_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/chat_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="16sp"
        tools:text="title" />

    <TextView
        android:id="@+id/chat_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_list_title"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="14sp"
        tools:text="content" />

    <TextView
        android:id="@+id/chat_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_list_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="time" />

</RelativeLayout>